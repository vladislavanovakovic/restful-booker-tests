{
    "name": "monocart-coverage-reports",
    "version": "1.1.0",
    "description": "Monocart coverage reports",
    "main": "lib/index.js",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.mjs",
            "require": "./lib/index.js",
            "default": "./lib/index.js"
        },
        "./package.json": "./package.json"
    },
    "types": "./lib/index.d.ts",
    "scripts": {
        "build-test": "npm run build-istanbul && npm run build-v8",
        "build-istanbul": "npx webpack --config mock/webpack.config-istanbul.js",
        "build-v8": "npx webpack --config mock/webpack.config-v8.js",
        "test": "node ./tests/test.js && npm run build-docs",
        "build": "sf lint && sf b -p && npm run build-docs",
        "dev": "sf d v8",
        "build-docs": "node ./scripts/build-docs.js",
        "patch": "npm run build && sf publish patch -r"
    },
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "lib"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cenfun/monocart-coverage-reports.git"
    },
    "dependencies": {
        "console-grid": "^2.0.1",
        "eight-colors": "^1.0.3",
        "istanbul-lib-coverage": "^3.2.2",
        "istanbul-lib-report": "^3.0.1",
        "istanbul-reports": "^3.1.6",
        "lz-utils": "^2.0.1",
        "monocart-code-viewer": "^1.0.8",
        "monocart-formatter": "^1.0.7",
        "turbogrid": "^3.0.10"
    },
    "devDependencies": {
        "babel-loader": "^9.1.3",
        "babel-plugin-istanbul": "^6.1.1",
        "eslint": "^8.55.0",
        "eslint-config-plus": "^1.0.6",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-vue": "^9.19.2",
        "github-markdown-css": "^5.5.0",
        "koa": "^2.14.2",
        "koa-static-resolver": "^1.0.4",
        "marked": "^11.1.0",
        "playwright": "^1.40.1",
        "stylelint": "^16.0.2",
        "stylelint-config-plus": "^1.0.4",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
